<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_200_transparent"
    tools:context=".ui.intro.PlayerVsPlayerFragment">

    <ImageView
        android:id="@+id/iv_intro_player_vs_player"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/ic_player_vs_player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/funny"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"
        android:text="@string/tv_desc_player_vs_player"
        app:layout_constraintTop_toBottomOf="@id/iv_intro_player_vs_player"
        app:layout_constraintLeft_toLeftOf="@id/iv_intro_player_vs_player"
        app:layout_constraintRight_toRightOf="@id/iv_intro_player_vs_player"/>

</androidx.constraintlayout.widget.ConstraintLayout>