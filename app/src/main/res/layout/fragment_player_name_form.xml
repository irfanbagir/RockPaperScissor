<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.intro.PlayerNameFormFragment">

    <ImageView
        android:id="@+id/iv_person_pic"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/ic_person_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <TextView
        android:id="@+id/tv_title_form_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/funny"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/tv_player_name_title"
        android:textSize="@dimen/_18ssp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_person_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:id="@+id/et_player_name"
        tools:text="test"
        android:padding="8dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_32sdp"
        android:layout_marginRight="@dimen/_32sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:background="@drawable/bg_edittext_rounded_white"
        app:layout_constraintTop_toBottomOf="@id/tv_title_form_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>